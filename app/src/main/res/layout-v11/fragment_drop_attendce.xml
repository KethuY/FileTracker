<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <TextView
            android:id="@+id/sno_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:text="1"
            android:visibility="visible"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/circular"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sankranth"
            android:layout_toRightOf="@+id/sno_tv"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/class_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:layout_below="@id/name_tv"
            android:layout_toRightOf="@+id/sno_tv"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/name_tv"
            android:background="@drawable/rouned_corner_rect_green"
            android:text="OWN_TRANSPORT"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible" />
    </RelativeLayout>

</android.support.v7.widget.CardView>