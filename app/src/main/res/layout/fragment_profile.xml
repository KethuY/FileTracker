<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/mainRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/main_ll"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/bg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/user" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="jfhjdshfjdhfjdfhj"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_ll"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circular_bg_grey_filled_white"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/mobile_no_tv"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="center_vertical|start"
                        android:hint="Mobile No"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="+91 8297366135 "
                        android:textSize="18sp"
                        android:typeface="normal" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/circular_bg_grey_filled_white"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/route_name"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="center_vertical|start"
                        android:hint="Route Name"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="Route Name"
                        android:textSize="18sp"
                        android:typeface="normal" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/circular_bg_grey_filled_white"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/vehicle"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="center_vertical|start"
                        android:hint="Vehicle No"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="473566658"
                        android:textSize="18sp"
                        android:typeface="normal" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/circular_bg_grey_filled_white"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/cleaner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="center_vertical|start"
                        android:hint="Cleaner Name"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="473566658"
                        android:textSize="18sp"
                        android:typeface="normal" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/circular_bg_grey_filled_white"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/cleaner_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="center_vertical|start"
                        android:hint="Cleaner Mobile No"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="473566658"
                        android:textSize="18sp"
                        android:typeface="normal" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/circular_bg_grey_filled_white"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/no_of_students"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:gravity="center_vertical|start"
                        android:hint="No of Students"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="60"
                        android:textSize="18sp"
                        android:typeface="normal" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
